                <h2>Titre par default</h2>
                <div id="upload-background" class="none">
                    <form method="" action="" id="upload-background">
                        <div class="file-group">
                            <label for="files-background"><i class="fas fa-upload"></i>Uploader des images</label>
                            <input type="file" name="files[]" id="files-background" multiple>
                            <img class="loader" src="{{ asset('build/utilities/loader.gif') }}">
                            <p class="message success">Lorem ipsum dolor sit amet consectetur adipisicing elit</p>
                        </div>
                    </form>
                </div>
                <div id="choose-text-style" class="none">

                    <ul class="classes-text">
                        {%  if  classNames['text'] is defined %}
                            {% for className in classNames['text'] %}


                                <li class="class-text">
                                    <div class="class-text__flex-container">
                                        <span>Nom du style</span>
                                        <div>
                                            <button class="hidden-btn">
                                                <i class="fal fa-trash" title="Supprimer"></i>
                                            </button>
                                            <button class="hidden-btn">
                                                <i class="fal fa-file-import" title="Importer"></i>
                                            </button>
                                        </div>
                                    </div>
                                    {% for incrustElementContent in className['elements']|slice(0,1) %}
                                        <div class="incrust-style-wrapper" data-id="{{className['id']}}" data-type="{{ className['type'] }}">
                                            <p class="{{ incrustElementContent['class'] }}" data-id="{{ incrustElementContent['id'] }}" data-incruste="{{ className['type'] }}" data-type = "{{ incrustElementContent['type'] }}" data-order="{{ loop.index-1 }}" data-content="{{ incrustElementContent['content'] }}">{{ incrustElementContent['content'] }}</p>
                                        </div>
                                    {% endfor %}
                                </li>
                            {% endfor %}
                        {%  endif %}
                    </ul>
                    <div class="button-group">
                        <button class="btn comfirm">valider</button>
                    </div>
                </div>
                <div id="choose-price-style" class="none">
                    <form class="choose-type-incrust">

                        <span>Type d'incruste</span>
                        <div class="radios-group">
                            <div class="radio">
                                <input type="radio" name="type" id="price-incrust" value="price" checked>
                                <label for="price-incrust">Prix</label>
                            </div>
                            <div class="radio">
                                <input type="radio" name="type" id="rupture-incrust" value="rupture">
                                <label for="rupture-incrust">Rupture</label>
                            </div>
                        </div>
                    </form>
                    <div class="list-prices">
                        <ul class="classes-text">
                            {% if classNames['price'] is defined %}
                                {% for className in classNames['price'] %}

                                    <li class="class-text">
                                        <div class="class-text__flex-container">
                                            <span>Nom du style</span>
                                            <div>
                                                <button class="hidden-btn">
                                                    <i class="fal fa-trash" title="Supprimer"></i>
                                                </button>
                                                <button class="hidden-btn">
                                                    <i class="fal fa-file-import" title="Importer"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="incrust-style-wrapper" data-id="{{ className['id'] }}" data-type="{{ className['type'] }}" >

                                            {% for  element in  className['elements'] %}
                                                <div class="{{ element['class'] }}" data-incruste="{{ className['type'] }}" data-type="{{ element['type'] }}" data-id="{{ element['id'] }}" data-order="{{ loop.index-1 }}">
                                                    {% for children in element['childrens'] %}
                                                        <span class="{{ children['class']}}" data-incruste="{{ className['type'] }}" data-id="{{ children['id'] }}" data-type="{{ children['type'] }}" data-order="{{ loop.index-1 }}" data-content="{{ children['content'] }}">{{  children['content'] }}</span>
