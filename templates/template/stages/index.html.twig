    <title>Menu du module Template</title>
    {% block stylesheets %}
        {# 'app' must match the first argument to addEntry() in webpack.config.js #}
        {{ encore_entry_link_tags('template') }}
        {{ encore_entry_link_tags('stage') }}

        <link id="text-style-css" href="{{ path('template::cssLoader', { type: 'text', stage: stageNumber }) }}" rel="stylesheet" type="text/css" media="all" />
        <link id="price-style-css" href="{{ path('template::cssLoader', { type: 'price', stage: stageNumber }) }}" rel="stylesheet" type="text/css" media="all" />
        {#   Renders a link tag (if your module requires any CSS)
               <link rel="stylesheet" href="/build/app.css"> #}
    {% endblock %}
</head>
<body {% if stageNumber is defined %}data-stage="{{ stageNumber }}" {% endif %}>
<div id="choice-background" class="template-menu">
    <div id="choice-zone">
        <div class="choice-window">
            <div class="choice-window__label"><p>Fenetre de choix</p><span class="choice-window__label__close"><i class="fal fa-times"></i></span></div>
            <div class="choice-window__content">
                <p>Voulez vous confirmer votre choix ?</p>
                <div class="choice-window__content__button">
                    <button id="choice-window__choice--yes">Oui</button>
                    <button id="choice-window__choice--no">Non</button>
                </div>
            </div>
        </div>
    </div>
</div>
<main>

    <div class="association-zones--buttons">
        <p>Cliquez sur les zones a associer et comfirmer ou annuler pour retourner vers le menu</p>
        <button type="button" class="comfirm" disabled>Confirmer association</button>
        <button type="button" class="cancel">Annuler</button>
    </div>

    <nav class="template-toolsmenu">
        <ul>
            <li><p>Fichier</p>
                <ul class="template-menu">
                    <li title="Nouveau "><i class="fal fa-file"></i><p>Nouveau</p></li>
                    <li title="Ouvrir"><i class="fal fa-folder-open"></i><p>Ouvrir</p></li>
                    <li id ="save" title="Enregistrer" {{ (template is defined and template.level < 2)  ? 'class = "disabled-nav-element" ' : ''}}><i class="fal fa-save"></i><p>Enregistrer</p></li>
                    <li id ="save_as" title = "Enregistrer sous"  ><i class="fal fa-save"></i><p>Enregistrer sous</p></li>
                    <li title="Quitter"><i class="fal fa-sign-out-alt"></i><p>Quitter</p></li>
                </ul>
            </li>
            <li><p>Edition</p>
                <ul>
                    <li data-modal="background"><i class="fal fa-image"></i><p>Arrière plan</p></li>
                    <li data-modal="text"><i class="fal fa-text"></i><p>Texte</p></li>
                    <li data-modal="price"><i class="fal fa-euro-sign"></i><p>Prix</p></li>
                    <li data-modal="medias"><i class="fal fa-photo-video"></i><p>Médias</p></li>
                </ul>
            </li>
            <li><p>Outils</p>
                <ul>
                    <li><i class="fal fa-plus-square"></i><p>Ajouter une zone</p></i>
                        <ul class="slider-menu">
                            <li title="Zone Texte"><i class="fal fa-text"></i><p>Zone texte</p></li>
                            <li title="Zone Prix"><i class="fal fa-euro-sign"></i><p>Zone prix</p></li>
                            <li title="Zone Media"><i class="fal fa-image"></i><p>Zone Médias</p></li>
                        </ul>
                    </li>

                    <li title="Déplacer"><i class="fal fa-arrows"></i><p>Déplacer</p></li>
                    <li title="Supprimer"><i class="fal fa-trash-alt"></i><p>Supprimer</p></li>
                    <li title="Dupliquer"><i class="fal fa-copy"></i><p>Dupliquer</p></li>
                    <li title="Transformation" class="disabled"><i class="fal fa-vector-square"></i><p>Transformation manuelle</p></li>
                    <li title="Arranger"><i class="fal fa-layer-group"></i><p>Organiser</p>
                        <ul class="slider-menu">
                            <li title="Avancer une zone"><i class="fal fa-layer-plus"></i><p>Avancer une Zone</p></li>
                            <li title="Reculer une zone"><i class="fal fa-layer-minus"></i><p>Reculer une zone</p></li>
                            <li title="Mettre au premier plan"><i class="fal fa-bring-front"></i><p>Mettre au premier plan</p></li>
                            <li title="Mettre au dernier plan"><i class="fal fa-send-back"></i><p>Mettre au dernier plan</p></li>
                        </ul>
                    </li>
                    <li title="Agrandir"><i class="fal fa-search-plus"></i><p>Agrandir</p></li>
                    <li title="Diminuer"><i class="fal fa-search-minus"></i><p>Diminuer</p></li>
                </ul>
            </li>
        </ul>
        <div id="template-infos"
                {% if (template is defined) and (template is not same as(null)) %}
                    data-orientation="{{ template.orientation }}"
                    data-id="{{ template.id }}"
                    data-level="{{ template.level }}"
                {% else %}
                    data-orientation="{{ orientation }}"
                {% endif %} data-stage="{{ stageNumber }}" data-action="{{ action }}">
            <p id="template-infos__name">{{ (template is defined) ? template.name : "Ici le nom du template" }}</p>
            <span id="currentTemplateLastModificationDate">Ici la date de la derniére sauvegarde</span>
        </div>
    </nav>
    <div class="toolbar template-toolsmenu">

        {%  if (stageNumber  is defined and stageNumber == 2) or (action is defined and action is not same as('create')) %}
            <div class="modal-toolbar tools" id="modal-toolbar">
                <ul>
                    <li class="tool ZoneContainerEditorTool hidden-tool" data-tool="ZoneContainerEditorTool">
                        <ul>
                            <li data-modal="background" class="subTool ZoneContainerBackgroundEditorTool" data-subtool="ZoneContainerBackgroundEditorTool"><span>Arrière plan</span><i class="fal fa-image"></i></li>
                            <li data-modal="text" class="subTool ZoneContainerTextEditorTool" data-subtool="ZoneContainerTextEditorTool"><span>Texte</span><i class="fal fa-text"></i></li>
