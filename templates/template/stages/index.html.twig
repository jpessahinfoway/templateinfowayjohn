                                            {#<p class="{{ className['name'] }}" data-id="{{ className['id'] }}">Ici la description de votre zone</p>#}
                                        </div>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                    <div class="button-group">
                        <button class="btn comfirm">valider</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="right-container">
